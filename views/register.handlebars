<div class='container'>
  <div class='row'>
    <div class='col-md-6'>
      <h2>Signup</h2>

      <form id='signup-form'>
        <div class='form-group'>
          <label for='first-name-signup'>First Name:</label>
          <input class='form-control' type='text' id='first-name-signup' />
        </div>
        <div class='form-group'>
          <label for='last-name-signup'>Last Name:</label>
          <input class='form-control' type='text' id='last-name-signup' />
        </div>
        <div class='form-group'>
          <label for='email-signup'>Email:</label>
          <input class='form-control' type='text' id='email-signup' />
        </div>
        <div class='form-group'>
          <label for='password-signup'>Password:</label>
          <input class='form-control' type='password' id='password-signup' />
        </div>
        <div class='form-group'>
          <button class='btn btn-primary' type='submit'>Signup</button>
          <p>Already have an account? <a href='/login'>Log in</a></p>
        </div>
      </form>
    </div>
  </div>
</div>

<script src='/js/register.js'></script>